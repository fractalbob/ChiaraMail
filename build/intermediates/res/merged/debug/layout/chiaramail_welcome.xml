<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="54dip"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
<!--              
            <ImageView 
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chiaramail_icon" />
-->           
            <ImageView 
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:contentDescription="@string/chiaramail_logo"
                android:src="@drawable/chiaramail_icon" />
 
            <TextView
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="8dip"
                android:paddingLeft="8dip"
                android:text="@string/tag_line"
                android:textStyle="italic"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/continue_button"
                android:text="@string/continue_action"
                android:layout_gravity="center_horizontal|center"
                android:radius="3dip"
                android:paddingLeft="100dip"
                android:paddingRight="100dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corners_blue"
				android:textSize="20sp" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_weight="1" />
            
            <TextView
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="@string/tos_msg"
                android:textColor="@color/gray"
                android:textSize="12sp" />
                        
            <Button 
                android:id="@+id/tos_button"
                android:text="@string/tos_title"
                android:layout_gravity="center_horizontal|center"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dk_gray"
                android:background="@drawable/rounded_corners_gray"
				android:textSize="15sp" />
            
            <TextView
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="@string/privacy_msg"
                android:textColor="@color/gray"
                android:textSize="12sp" />
                        
            <Button 
                android:id="@+id/privacy_button"
                android:text="@string/privacy_title"
                android:layout_gravity="center_horizontal|center"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dk_gray"
                android:background="@drawable/rounded_corners_gray"
				android:textSize="15sp" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

<!--     <include layout="@layout/wizard_next" />--> 

</LinearLayout>